<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#8BC34A"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:text="E Fresh Garden"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/fruit_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/title_text_view"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/efresh" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="32dp"
        android:background="#E91E63">


        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/business_description"
            android:textColor="@android:color/white"
            android:textSize="22sp" />


        <ImageView
            android:id="@+id/phone_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/description_text_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_text_view"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/phone_image_view"
            android:text="@string/business_phone_contact"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/location_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/phone_image_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_image_view"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/location_image_view"
            android:text="@string/business_location"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/time_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/location_text_view"
            android:layout_marginLeft="16dp"
            android:src="@drawable/clock" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_text_view"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/time_image_view"
            android:text="@string/business_hours"
            android:textColor="@android:color/white"
            android:textSize="22sp" />


    </RelativeLayout>


</LinearLayout>